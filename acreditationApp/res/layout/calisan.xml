<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llmain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
	android:paddingTop="10dp">
		<TextView 
		    android:id="@+id/tvInternet"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Internet State"
			android:textSize="22dp"
			android:gravity="center">		    
		</TextView>
    	<ImageView
    	    android:id="@+id/ivResim"
    	    android:layout_gravity="center"
    	    android:paddingLeft="0dp"
    	    android:paddingRight="0dp"    	    
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/resimcek">
		</ImageView>
        
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
		    android:id="@+id/llatributes"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"> 
		    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:weightSum="3">
			    <TextView
				    android:layout_weight="1"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="Isim"
			        android:textSize="22dp">
			    </TextView>
			    <EditText
			        android:layout_weight="2"			        
			        android:id="@+id/etIsim"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:focusable="false"
			        android:hint="isim">
			    </EditText>
		    </LinearLayout>
		    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:weightSum="3"
		    android:gravity="center">
			    <TextView
				    android:layout_weight="1"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="TC Kimlik"
			        android:textSize="22dp">
			    </TextView>
			    <EditText
			        android:layout_weight="2"			        
			        android:id="@+id/etTCKimlik"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:hint="tc kimlik"
			        android:focusableInTouchMode="false">
			    </EditText>
		    </LinearLayout>
		    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:weightSum="3"
		    android:gravity="center">
			    <TextView
				    android:layout_weight="1"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="Firma"
			        android:textSize="22dp"
			        >
			    </TextView>
			    <EditText
			        android:layout_weight="2"			        
			        android:id="@+id/etFirma"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:hint="firma"
			        android:focusableInTouchMode="false">
			    </EditText>
		    </LinearLayout>
		    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:weightSum="3">
			    <TextView
				    android:layout_weight="1"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="Görev"
			        android:textSize="22dp">
			    </TextView>
			    <EditText
			        android:layout_weight="2"			        
			        android:id="@+id/etGorev"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:hint="görev"
			        android:focusable="false">
			    </EditText>
		    </LinearLayout>
		    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:weightSum="3">
			    <TextView
				    android:layout_weight="1"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="Bölge"
			        android:textSize="22dp">
			    </TextView>
			    <EditText
			        android:layout_weight="2"			        
			        android:id="@+id/etBolge"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:hint="bolge"
			        android:focusable="false">
			    </EditText>
		    </LinearLayout>		    				       
	</LinearLayout>   
	</LinearLayout>	
    <LinearLayout android:id="@+id/footer" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:orientation="horizontal"
    android:layout_alignParentBottom="true" style="@android:style/ButtonBar">
    <Button android:id="@+id/btnGiris" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:text="GİRİŞ" />
    <Button android:id="@+id/btnCikis" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:text="ÇIKIŞ" />
	</LinearLayout>
</RelativeLayout>